page {
  height: 100%;
  font-size: 70%;
}

.bookdetail-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
  width: 100%;
}

.bookdetail-container .title {
  display: flex;
  flex: 0 0 50px;
  background-color: #ef6c00;
  width: 100%;
  color: #fff;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  font-weight: bold;
}

.bookdetail-container .progress {
  display: flex;
  flex-direction: column;
  flex: 1 1 auto;
  width: 100%;
}

.bookdetail-container .progress .started {
  color: #898984;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  padding-top: 20px;

}

.bookdetail-container .progress .speed {
  color: #ef6c00;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  padding-top: 20px;
}

.bookdetail-container .cover {
  display: flex;
  flex: 2 1 auto;
  width: 100%;
  justify-content: center;
  align-items: flex-start;
}

.bookdetail-container .cover .book-cover-preview {
  background-color: #ddd;
  width: 160.5px;
  height: 202.5px;
  border-radius: 10px;
}

.bookdetail-container .actionbar {
  display: flex;
  flex: 2 1 auto;
  width: 100%;
}
